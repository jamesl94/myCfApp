<div class="product-reviews">
	<% @comments.each do |comment| %>
		<div class="row">
			<div class="col-md-12">
				<hr>
				<p><b><%= comment.user.first_name %></b> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small>
				<span class="rated" data-score="<%= comment.rating %>"></span></p>
				<p><%= comment.body %></p>
			</div><!-- End col -->
		</div><!-- End row -->
	<% end %>
</div><!-- End product reviews div -->
<div class="container">  
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-2">
      <div class="thumbnail">
        <%= image_tag(@product.image_url, alt: "Product Image")%>
        <div class="caption">
          <h3><%= @product.name %></h3>
          <p><%= @product.description %></p>
          <hr>
          <p><%= @product.text %></p>
          <hr>
          <%= link_to 'Edit', edit_product_path(@product) %> |
          <%= link_to 'Back', products_path %>
          <b><span style="display: inline-block; float: right;"><%= "$%.0f" % @product.price %></span></b>
        </div><!-- End caption -->
      </div><!-- End thumbnail -->
    </div><!-- End col -->
  </div><!-- End row -->
  <br/>
  <br/>
  <br/>
</div><!-- End container -->

